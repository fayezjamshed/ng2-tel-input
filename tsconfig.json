{
    "compilerOptions": {
      "noImplicitAny": true,
      "module": "esnext",
      "lib": ["es2022", "dom"],
      "target": "es2022",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "declaration": false,  // Declarations will be handled in tsconfig.lib.json
      "outDir": "./dist"
    },
    "angularCompilerOptions": {
      "enableIvy": true
    },
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
  